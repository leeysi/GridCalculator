<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="yeseul.kr.hs.emirim.gridcalculator.MainActivity">

    <EditText
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_rowSpan="2"
        android:layout_columnSpan="5"
        android:orientation="vertical">

        <Button
            android:id="@+id/but0"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="0" />

        <Button
            android:id="@+id/but1"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="1" />

        <Button
            android:id="@+id/but2"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="2" />

        <Button
            android:id="@+id/but3"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:text="3" />

        <Button
            android:id="@+id/but4"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:text="4" />


        <Button
            android:id="@+id/but5"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="5" />

        <Button
            android:id="@+id/but6"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="6" />

        <Button
            android:id="@+id/but7"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="7" />

        <Button
            android:id="@+id/but8"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:text="8" />

        <Button
            android:id="@+id/but9"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:text="9" />

    </GridLayout>

    <Button
        android:id="@+id/but_plus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+"/>
    <Button
        android:id="@+id/but_minus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"/>
    <Button
        android:id="@+id/but_but_multiply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*"/>
    <Button
        android:id="@+id/but_division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/"/>

</LinearLayout>
